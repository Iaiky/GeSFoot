{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 900px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container" >
        <h1 style="text-align:center;">Liste des Clubs</h1>
        <div class="container" style="display:flex; justify-content:space-around; flex-wrap: wrap;">
            {% for club in clubs %}
                <div class="card mb-5" style="width: 15rem;">
                    <div class="card-header">
                        <h5>{{ club.nomClub }}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ club.pays }}</p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('club_edit', { 'id': club.id }) }}" class="btn btn-secondary">Modifier</a>
                        <a href="{{ path('club_supprimer', { 'id': club.id }) }}" class="btn btn-danger">Supprimmer</a>
                    </div>
                </div>
            {% endfor %}
            
        </div>
    </div>
</div>
{% endblock %}
