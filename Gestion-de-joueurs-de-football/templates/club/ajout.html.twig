{% extends 'base.html.twig' %}

{% block title %}Ajout Club{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 900px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container col-md-6" style="display: flex;flex-direction: column;">
        <h1>{{ titre }} d'un Club</h1>

        {{ form_start(formClub) }}

        {{ form_row(formClub.nomClub, {'attr':{'placeholder' : "nom du club"}}) }}
        {{ form_row(formClub.pays, {'attr':{'placeholder' : "pays"}}) }}


        <div class="XD" style="text-align:center;">
            <button class="btn btn-success" type="submit" style="float: center;">{{ buttontext }}</button>
        </div>
        
        {{ form_end(formClub) }}
    </div>
</div>
{% endblock %}