{% extends 'base.html.twig' %}

{% block title %}Liste de joueurs{% endblock %}

{% block body %}
<div class="navbar" style="display:flex; justify-content:space-evenly;">
    {{ form_start(formClub) }}

    {{ form_row(formClub.club) }}
    <div class="XD" style="text-align:center;">
        <button class="btn btn-success" type="submit" style="float: center;">Filtrer</button>
    </div>
    {{ form_end(formClub) }}


    {{ form_start(formNational) }}

    {{ form_row(formNational.national) }}
    <div class="XD" style="text-align:center;">
        <button class="btn btn-success" type="submit" style="float: center;">Filtrer</button>
    </div>
    {{ form_end(formNational) }}
</div>
<br>

<div class="container CK">
    <h4>Trier par:</h4>
    <div class="btn-group" role="group" aria-label="Button group">
        <ul>
            <li><a href="{{ path('app_gestion_de_joueurs', { 'tri': 2 }) }}">Nom</a></li>
            <li><a href="{{ path('app_gestion_de_joueurs', { 'tri': 3}) }}">Nombre de buts</a></li>
            <li><a href="{{ path('app_gestion_de_joueurs', { 'tri': 4 }) }}">Parcours</a></li>
        </ul>     
    </div>

</div>

<div class="container">
    <h1>Liste de joueurs</h1>
    <div class="container" style="display:flex; justify-content:space-around; flex-wrap: wrap;">
        {% for joueur in joueurs %}
            <div class="card mb-5" style="width: 18rem;">
                <div class="card-header">
                    <h5>{{ joueur.nom }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Nationalit√©: {{ joueur.nationalite }}</p>
                    <p class="card-text">Date de naissance: {{ joueur.dateDeNaissance | date('d/m/Y') }}</p>
                    <p class="card-text">nombre de buts: {{ joueur.nombreDeBut }}</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('fiche_joueur', { 'id': joueur.id }) }}" class="btn btn-primary" ><i style="font-size:24px" class="fa">&#xf2bd;</i></a>
                    <a href="{{ path('joueur_edit', { 'id': joueur.id }) }}" class="btn btn-secondary"><i style="font-size:24px" class="fa">&#xf044;</i></a>
                    <a href="{{ path('joueur_supprimer', { 'id': joueur.id }) }}" class="btn btn-danger"><i style="font-size:24px" class="fa">&#xf1f8;</i></a>
                </div>
            </div>
        {% endfor %}
        
    </div>
</div>
{% endblock %}
